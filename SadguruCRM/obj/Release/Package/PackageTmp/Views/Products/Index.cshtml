@model IEnumerable<SadguruCRM.Models.Products_Master>

@{
    ViewBag.Title = "Products";
}


<div class="row">
    <div class="col">
        <h2>Products</h2>
    </div>
    <div class="pull-right">
        @Html.ActionLink("New Product", "Create", null, new { @type = "button", @class = "btn btn-outline-secondary" })
    </div>

</div>
<table class="table display cell-border">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th></th>
        </tr>

        <tr>
            <th>
                @Html.DisplayName("Product")
            </th>
            <th>
                @Html.DisplayName("Product Category")
            </th>
            <th>
                @Html.DisplayName("Product Sub Category")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th>
                @Html.DisplayName("Vendor")
            </th>
            <th>
                @Html.DisplayName("UOM")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Tax Applicable")
            </th>
            <th>
                @Html.DisplayName("TAX")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Category_Master.Product_Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Category_Master1.Product_Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.VendorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UOM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.TaxApplicable)*@
                @if (item.TaxApplicable == null || (bool)item.TaxApplicable == false)
                {
                    <text>NO</text>
                }
                else
                {
                    <text>YES</text>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxInPercentage)
            </td>
            <td style="font-size: 10px;">
                @Html.ActionLink(" ", "Edit", new { id = item.Product_ID }, new { @class = "fa fa-edit", @title = "EDIT" })
                @Html.ActionLink(" ", "Details", new { id = item.Product_ID }, new { @class = "fa fa-info", @title = "VIEW" })
                @Html.ActionLink(" ", "Delete", new { id = item.Product_ID }, new { @class = "fa fa-trash", @title = "DELETE" })
            </td>
        </tr>
        }
    </tbody>

</table>

<script>
    var table;
    $(document).ready(function () {

        table = $('.table').DataTable({
            fixedHeader: true,
            order: [[0, 'asc']],
            "pageLength": 25
        });
        var colindex = 1;
        $('.table thead tr:first th').each(function () {
            if (colindex < 11) {
                //var title = $('#leads thead th').eq($(this).index()).text();
                $(this).html('<input type="text" placeholder="" class="column_search"/>');
            } else if (colindex == 11) {
                $(this).html('<input type="button" value="RESET" class="btn btn-sm btn-outline-secondary" id="reset" onclick="clearSearchBoxes();"/>');
            }
            colindex++;
        });
        //table.columns().every(function () {
        //    var column = this;

        //    $('input', this.header()).on('keyup change', function () {
        //        column
        //            .search(this.value)
        //            .draw();
        //    });
        //});
        $('.table thead tr:first th').on('keyup', ".column_search", function () {
            table
                .column($(this).parent().index())
                .search(this.value)
                .draw();
        });
        $(".dataTables_filter").css("display", "none");


    });
    //table.columns( '.Status' ).search( 'Important' ).draw();
    function clearSearchBoxes() {
        var searchBoxes = $(".column_search");
        for (var i = 0; i < searchBoxes.length; i++) {
            $(searchBoxes[i]).val("");
        }
        table.search('').columns().search('').draw();
    };

</script>
