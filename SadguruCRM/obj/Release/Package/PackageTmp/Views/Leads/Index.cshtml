@model IEnumerable<SadguruCRM.Models.Lead>

@{
    ViewBag.Title = "Leads";
}


    <div class="row">
        <div class="col">
            <h2>Leads</h2>
        </div>
        <div class="pull-right">
            @Html.ActionLink("New Lead", "Create", null, new { @type = "button", @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Import", "ImportLeads", null, new { @type = "button", @class = "btn btn-outline-secondary" })
            @Html.ActionLink("Export", "Create", null, new { @type = "button", @class = "btn btn-outline-secondary" })
