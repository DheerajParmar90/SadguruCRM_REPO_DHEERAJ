@model IEnumerable<SadguruCRM.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<div class="row">
    <div class="col">
        <h2>Employees</h2>
    </div>
    <div class="pull-right">
        @Html.ActionLink("New Employee", "Create", null, new { @type = "button", @class = "btn btn-outline-secondary" })
    </div>

</div>

<table class="table display cell-border">
    <thead>
        <tr>
            <th style="display:none;"></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th style="min-width:55px;"></th>
        </tr>
        <tr>

            <th style="display:none;">Employee ID</th>
            <th>
                @Html.DisplayName("Employee Code")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Designation")
            </th>
            <th>
                @Html.DisplayName("Department")
            </th>
            <th>
                @Html.DisplayName("Joining Date")
            </th>
            <th>
                @Html.DisplayName("Primary / Company Number")
            </th>
            <th>
                @Html.DisplayName("Secondary / Personal Number")
            </th>
            <th>
                @Html.DisplayName("Company Email ID")
            </th>
            <th>
                @Html.DisplayName("Branch")
            </th>
            <th>
                @Html.DisplayName("Reporting To")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th style="min-width:55px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="display:none;">
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeDesignation.Designation)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.Department_Master.Department)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.DateOfJoining, "{0:dd/MM/yyyy hh:mm tt}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryCellNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryCellNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyEmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.BranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employees_Status_Master.EmployeeStatus)
            </td>
            <td style="min-width:55px;">
                @Html.ActionLink(" ", "Edit", new { id = item.EmployeeID }, new { @class = "fa fa-edit", @title = "EDIT" }) |
                @Html.ActionLink(" ", "Details", new { id = item.EmployeeID }, new { @class = "fa fa-info", @title = "DETAILS" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.EmployeeID }, new { @class = "fa fa-trash", @title = "DELETE" })
            </td>
        </tr>
        }
    </tbody>



</table>

<script>
    var table;
    $(document).ready(function () {

        table = $('.table').DataTable({
            fixedHeader: true,
            order: [[0, 'desc']],
            "pageLength": 25
        });
        var colindex = 1;
        $('.table thead tr:first th').each(function () {
            if (colindex < 13) {
                //var title = $('#leads thead th').eq($(this).index()).text();
                $(this).html('<input type="text" placeholder="" class="column_search"/>');
            } else if (colindex == 13) {
                $(this).html('<input type="button" value="RESET" class="btn btn-sm btn-outline-secondary" id="reset" onclick="clearSearchBoxes();"/>');
            }
            colindex++;
        });
        //table.columns().every(function () {
        //    var column = this;

        //    $('input', this.header()).on('keyup change', function () {
        //        column
        //            .search(this.value)
        //            .draw();
        //    });
        //});
        $('.table thead tr:first th').on('keyup', ".column_search", function () {
            table
                .column($(this).parent().index())
                .search(this.value)
                .draw();
        });
        $(".dataTables_filter").css("display", "none");


    });
    //table.columns( '.Status' ).search( 'Important' ).draw();
    function clearSearchBoxes() {
        var searchBoxes = $(".column_search");
        for (var i = 0; i < searchBoxes.length; i++) {
            $(searchBoxes[i]).val("");
        }
        table.search('').columns().search('').draw();
    };

</script>