@model SadguruCRM.Models.Product_Category_Master

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@{
    if (ViewBag.ChildCategoriesCount != 0) { 
        <h3>This Category is Parent for @ViewBag.ChildCategoriesCount Categories. <br /> Child Categories will also be deleted!</h3>
    }
} 
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Product Category", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_Category)
        </dd>

        <dt>
            @Html.Label("Parent Category", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Parent_Category_Name)
        </dd>


        <dt>
            @Html.Label("Order", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order)
        </dd>

        <dt>
            @Html.Label("Created By", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserLogin.UserName)
        </dd>
        <dt>
            @Html.Label("Created On", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt>
            @Html.Label("Last Updated By", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserLogin1.UserName)
        </dd>
        <dt>
            @Html.Label("Last Updated On", new { @class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastUpdatedDate)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @{
        if (ViewBag.ProductsCount == 0)
        {
            <input type="submit" value="Delete" class="btn btn-secondary" style="float:right;margin-left:5px;" />
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-secondary" style="float:right;margin-left:5px;" disabled />
            <h6 style="float:right;margin-left:5px;">This Category can not be Deleted, as Products are assigned to it.</h6>
        }
    }

    @Html.ActionLink("Back to List", "Index", null, new { @type = "button", @class = "btn btn-outline-secondary" })
</div>
    }
</div>
